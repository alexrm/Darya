<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingLeft="8dp"
    android:paddingStart="8dp"
    android:paddingRight="8dp"
    android:paddingEnd="8dp"
    android:background="?android:selectableItemBackground"
    android:theme="@style/AppTheme.DarkMatter">

    <!--<ImageView-->
        <!--android:id="@+id/chooser_currency_icon"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:padding="6dp"-->
        <!--android:scaleType="centerInside"-->
        <!--android:src="@drawable/ic_turkey"-->
        <!--android:background="@drawable/unselected_currency_bg"-->
        <!--tools:ignore="ContentDescription"/>-->

    <TextView
        android:id="@+id/chooser_currency_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/unselected_currency_bg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="6dp"
        android:gravity="center"
        android:text="T"
        android:textColor="#fff"
        android:textSize="16sp"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/chooser_currency_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="false"
        android:layout_margin="8dp"
        android:theme="@style/AppTheme.DarkMatter"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/chooser_currency_icon"
        android:layout_toRightOf="@id/chooser_currency_icon"
        android:layout_toLeftOf="@id/chooser_currency_selected"
        android:layout_toStartOf="@id/chooser_currency_selected"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/chooser_currency_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:textColor="#ffffffff"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Some currency"/>

        <TextView
            android:id="@+id/chooser_currency_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chooser_currency_name"
            android:layout_margin="2dp"
            android:textSize="14sp"
            android:textColor="#b3ffffff"
            android:text="SCR"
            />
    </RelativeLayout>


</RelativeLayout>